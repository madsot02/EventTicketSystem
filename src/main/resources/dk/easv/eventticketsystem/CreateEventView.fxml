<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="519.0" prefWidth="562.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.eventticketsystem.GUI.CreateEventController">
   <top>
      <HBox alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="20.0" left="45.0" right="25.0" top="20.0" />
         </padding>
         <children>
            <Label text="Create New Event" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefWidth="562.0" spacing="20">
         <padding>
            <Insets bottom="20" left="25" right="25" top="10" />
         </padding>
         <children>
            <VBox spacing="15">
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="8">
                     <children>
                        <Label text="REQUIRED">
                           <font>
                              <Font name="System Bold" size="10" />
                           </font>
                        </Label>
                        <Label text="Essential Information">
                           <font>
                              <Font name="System" size="14" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <VBox spacing="6">
                     <children>
                        <Label text="Event Name">
                           <font>
                              <Font size="13" />
                           </font>
                        </Label>
                        <TextField promptText="Enter event name" />
                     </children>
                  </VBox>
                  <HBox spacing="15">
                     <children>
                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Date">
                                 <font>
                                    <Font size="13" />
                                 </font>
                              </Label>
                              <TextField />
                           </children>
                        </VBox>
                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Time">
                                 <font>
                                    <Font size="13" />
                                 </font>
                              </Label>
                              <TextField />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox spacing="6">
                     <children>
                        <Label text="Location ">
                           <font>
                              <Font size="13" />
                           </font>
                        </Label>
                        <TextField promptText="Enter event location" />
                     </children>
                  </VBox>
                  <VBox spacing="6">
                     <children>
                        <Label text="Notes ">
                           <font>
                              <Font size="13" />
                           </font>
                        </Label>
                        <TextArea prefRowCount="4" promptText="Important notes or instructions" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefWidth="562.0" spacing="15">
         <padding>
            <Insets bottom="25.0" left="25.0" right="45.0" top="20.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" text="Create Event" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
